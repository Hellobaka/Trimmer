<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="UpControlButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrushKey}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=RootElement, Path=IsUpPressed}"
                                                 Value="True">
                <Setter Property="Background" Value="{DynamicResource AccentBrushKey}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
