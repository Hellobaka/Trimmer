<?xml version="1.0"?>
<SyntaxDefinition name="Lrc" extensions=".lrc" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
  <Color name="IdTag" foreground="Green" exampleText="[ti:Title]" />
  <Color name="TimeTag" foreground="Blue" exampleText="[00:00.00]" />
  <RuleSet>
    <Span color="IdTag" begin="\[[a-z]+:" end="\]" />
    <Rule color="TimeTag">
      \[(\d{1,2}):(\d{1,2}).(\d{1,2})\]
    </Rule>
  </RuleSet>
</SyntaxDefinition>
